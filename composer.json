{
    "name": "mrpritchett/livewire-editorjs",
    "description": "This Package aims for an easy integration of Editor.JS with Laravel Livewire",
    "keywords": [
        "mrpritchett",
        "livewire-editorjs",
        "laravel-livewire",
        "editorjs"
    ],
    "homepage": "https://github.com/mrpritchett/livewire-editorjs",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Matt Pritchett",
            "email": "mattpritchett@hey.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/support": "^7.0|^8.0",
        "livewire/livewire": "^2.3",
        "ext-json": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0|^6.0",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "Mrpritchett\\LivewireEditorjs\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mrpritchett\\LivewireEditorjs\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mrpritchett\\LivewireEditorjs\\LivewireEditorjsServiceProvider"
            ],
            "aliases": {
                "LivewireEditorjs": "Mrpritchett\\LivewireEditorjs\\LivewireEditorjsFacade"
            }
        }
    }
}
